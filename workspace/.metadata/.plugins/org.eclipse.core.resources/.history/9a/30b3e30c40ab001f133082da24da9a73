package com.itba.imagenes.tp0;

import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Crop {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		ParamsReader params = null;
		try {
			params = new ParamsReader(args);
		} catch (Exception e) {
			e.printStackTrace();
		}

		BufferedImage img = null;
		try {
			img = ImageIO.read(new File(params.inputImageName));
		} catch (IOException e) {
			e.printStackTrace();
		}
		int width = 100;
		int height = 200;

		BufferedImage croppedImage = new BufferedImage(width, height,
				BufferedImage.TYPE_INT_RGB);

		for (int i = 0; i < width; i++) {
			for (int j = 0; j < height; j++) {
				croppedImage.setRGB(i, j, img.getRGB(i, j));
			}
		}

		try {
			ImageIO.write(croppedImage, "jpg", new File(
					"/Users/iandrono/Documents/ITBA/Imagenes/tps/tp0/Crop.png"));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
